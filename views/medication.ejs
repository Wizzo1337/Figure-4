
<%- include('partials/header-logged-in') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <a href="/profile" class="col-3 btn btn-primary">Back to Profile</a>
          </div>
          <div class="mt-5">
            <!-- <a href="/medication" class="col-3 btn btn-danger">Medication List</a> -->
            <h2>Add a new Medication</h2>
            <form action="/medication/createMed" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="medName" class="form-label">Medication Name</label>
                  <input type="text" class="form-control bg-light bg-opacity-75" id="medName" name="medName">
              </div>
              <div class="mb-3">
                <label for="instruction" class="form-label">Instructions</label>
                <textarea class="form-control bg-light bg-opacity-75" id="instruction" name="instruction"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image of Medication</label>
                <input type="file" class="form-control bg-light bg-opacity-75" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<meds.length; i++) {%>
          <div class="card col-6 justify-content-between mt-5 bg-light bg-opacity-75" style="width: 18rem;">
            <a href="/medication/<%= meds[i]._id%>">
              <img class="img-fluid" src="<%= meds[i].image%>">
            </a>
            <div class="card-body">
              <a href="/medication/<%= meds[i]._id%>">
                <h5 class="card-title"><%= meds[i].medication%></h5>
              </a>
              <p class="card-text"><%= meds[i].createdAt.toLocaleDateString() %></p>
              <p class="card-text"><%= meds[i].instruction %></p>
            </div>
          </div>
        <% } %>
        </ul>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') -%>


