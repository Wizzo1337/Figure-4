<%- include('partials/header-logged-in') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= meds.medication %></h2>
        <img class="img-fluid" src="<%= meds.image%>">
        <p class="card-text"><%= meds.createdAt.toLocaleDateString() %></p>
        <p class="card-text"><%= meds.instruction %></p>
      <div class="row justify-content-between">
        <%if(meds.user == user.id){ %>
        <form
          action="/medication/deleteMed/<%= meds.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary" type="submit"><i class="fa-solid fa-trash"></i></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p></p>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/medication">Return to Medication List</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
