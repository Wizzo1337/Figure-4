<%- include('partials/header-logged-in') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= meds.medication %></h2>
        <img class="img-fluid" src="<%= meds.image%>">
        <p class="card-text"><%= meds.createdAt.toLocaleDateString() %></p>
        <p class="card-text"><%= meds.instruction %></p>
      <div class="row justify-content-between">
        <!-- <form
          class="col-1"
          action="/post/likePost/<%= meds.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= meds.likes %></h3> -->
        <%if(meds.user == user.id){ %>
        <form
          action="/post/deletePost/<%= meds.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary" type="submit"><i class="fa-solid fa-trash"></i></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p></p>
    </div>
    <div class="mt-5">
      <h2>Add a comment</h2>
      <form action="/comment/createComment/<%=meds._id%>" method="POST">
        <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <input type="text" class="form-control" id="comment" name="comment">
        </div>
        <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
      </form>
    </div>
    <ul>
      <% for(var i=0; i<comments.length; i++) { %>
          <li class="col-6 justify-content-between mt-5">
            <%= comments[i].comment%>
            <% if (user.id == comments[i].user) { %>
              <form action="/comment/deleteComment/<%= comments[i]._id %>?_method=DELETE" method="POST" class="col-3">
                <button class="btn btn-danger" type="submit"">Day-lay-tay</button>
              </form>
            <% } %>
          </li>
        <% } %>
    </ul>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/medication">Return to Medication List</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
